# Database
POSTGRES_DB=roots
POSTGRES_USER=roots_user
POSTGRES_PASSWORD=changeme
DATABASE_URL=postgresql+asyncpg://roots_user:changeme@postgres:5432/roots

# JWT — generate with: openssl rand -hex 32
JWT_SECRET_KEY=replace-with-random-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# MinIO / S3
STORAGE_ENDPOINT=http://minio:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=roots-media
STORAGE_USE_SSL=false

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
VK_CLIENT_ID=
VK_CLIENT_SECRET=

# App
FRONTEND_URL=http://localhost
ENVIRONMENT=production

# Frontend (Vite) — only for local dev without docker
VITE_API_URL=http://localhost/api
